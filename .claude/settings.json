{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(./vendor/bin/pint:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/python-hooks/format-php.py",
            "timeout": 60
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/python-hooks/remind-rules.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
