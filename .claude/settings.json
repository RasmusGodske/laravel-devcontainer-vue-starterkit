{
  "statusLine": {
    "type": "command",
    "command": "/home/vscode/project/.claude/statusline-wrapper.sh"
  },
  "permissions": {
    "allow": [
      "Edit",
      "WebFetch",
      "WebSearch",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(composer --version:*)",
      "Bash(./vendor/bin/pint:*)",
      "Bash(php artisan make:model:*)",
      "Bash(php artisan migrate:*)",
      "Skill(*)",
      "mcp__laravel-boost",
      "mcp__serena"
    ]
  },
  "hooks": {
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR/devtools/claude-hooks/SubAgentReviewer && uv run python main.py",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR/devtools/claude-hooks/SubAgentReviewer && uv run python main.py",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
