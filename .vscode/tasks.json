      "command": "docker compose down",
      "problemMatcher": []
    },
    {
      "label": "Artisan: serve",
      "type": "shell",
      "command": "./devtools/serve.sh 8080 0.0.0.0",
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "server"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ""
