    {
      "label": "Docker: compose up",
      "type": "shell",
      "command": "docker compose up",
      "icon": {
        "color": "terminal.ansiBlue",
        "id": "package"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ""
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[\\+\\] Running",
          "endsPattern": "(Attaching to|Container.*Started)"
        }
      },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "reveal": "always"
      },
      "options": {
        "cwd": ""
      }
    },
