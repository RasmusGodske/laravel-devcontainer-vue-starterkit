{
  "prompt": ".reldo/orchestrator.md",
  "allowed_tools": [
    "Read",
    "Glob",
    "Grep",
    "Bash",
    "Task",
    "Edit",
    "Write",
    "WebFetch",
    "WebSearch",
    "Bash(find:*)",
    "Bash(grep:*)",
    "Bash(cat:*)",
    "Bash(ls:*)",
    "Bash(sed:*)",
    "Bash(sort:*)",
    "Bash(uniq:*)",
    "Bash(head:*)",
    "Bash(tail:*)",
    "Bash(wc:*)",
    "Bash(cut:*)",
    "Bash(awk:*)",
    "Bash(xargs:*)",
    "Bash(./vendor/bin/pint:*)",
    "Bash(./vendor/bin/phpstan:*)",
    "Bash(npm run type-check:files --:*)",
    "mcp__serena",
    "Bash(php artisan test:*)",
    "Bash(test:php:*)",
    "Bash(lint:php:*)",
    "Bash(lint:js:*)",
    "Bash(lint:ts:*)",
    "Bash(qa:*)",
    "Bash(./devtools/test/php.sh:*)",
    "Bash(./devtools/lint/php.sh:*)",
    "Bash(./devtools/lint/js.sh:*)",
    "Bash(./devtools/lint/ts.sh:*)",
    "Bash(./devtools/qa.sh:*)",
    "Bash(git diff --name-only HEAD)"
  ],
  "timeout_seconds": 180,
  "model": "claude-sonnet-4-20250514",
  "logging": {
    "enabled": true,
    "output_dir": ".reldo",
    "verbose": false
  }
}
